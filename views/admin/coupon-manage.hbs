<section class="main-content w-100" style="background-color: black;">
  <div class="container mt-4 px-5">
    <div class="d-flex justify-content-between">
      <h3 class="title-5 m-b-35">Coupons</h3>
      <div class="table-data__tool">
        <div class="table-data__tool-right">
          <button class="btn" onclick="location.href='/admin/addcoupon'">
            <i class="fa-solid fa-plus"></i>
            &nbsp ADD</button>
        </div>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Dis. %Value </th>
          <th>Max Purchars</th>
          <th>Used Coupens</th>
          <th>Exp. date</th>
          <th>Action</th>
          <!-- <th>Actions</th> -->
        </tr>
      </thead>
      <tbody>
        {{#each allCoupons}}
          <tr>
            <td>{{name}}</td>
            <td>{{code}}</td>
            <td>{{disValue}}</td>
            <td>{{maxPurchars}}</td>
            <td>{{count}}/{{maxUsers}}</td>
            <td class="expDateCell">{{expDate}}</td>
            <td>
              <button
                class="item"
                data-toggle="tooltip"
                data-placement="top"
                title=""
                data-original-title="Edit"
                onclick="location.href='/admin/editcoupon/{{_id}}'"
              >
                <i class="fas fa-pen"></i>
              </button>
              {{#if active}}
                <button
                  class="item"
                  data-toggle="tooltip"
                  data-placement="top"
                  title=""
                  data-original-title="Delete"
                  onclick="location.href='/admin/unlistcoupon/{{_id}}'"
                >
                  <i class="fa-sharp fa-solid fa-eye-slash"></i>
                </button>
              {{else}}
                <button
                  class="item"
                  data-toggle="tooltip"
                  data-placement="top"
                  title=""
                  data-original-title="Delete"
                  onclick="location.href='/admin/listcoupon/{{_id}}'"
                >
                  <i class="fa-sharp fa-solid fa-eye"></i>
                </button>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{#if duplicateCategoryError}}
      <div class="alert alert-danger mt-4" role="alert">
        Category already exists.
      </div>
    {{/if}}
  </div>
</section>

<script>
  setTimeout(function() {
    document.querySelector('.alert').style.display = 'none';
  }, 3000); // hide alert after 5 seconds (5000 milliseconds)
</script>

<script>
  // Get all table cells with class "expDateCell"
  const expDateCells = document.querySelectorAll(".expDateCell");

  // Format the date for each cell
  const options = {
    day: "2-digit",
    month: "2-digit",
    year: "numeric",
  };
  expDateCells.forEach((cell) => {
    const dateStr = cell.textContent;
    const formattedDate = new Intl.DateTimeFormat("en-GB", options).format(
      new Date(dateStr)
    );
    cell.textContent = formattedDate;
  });
</script>
