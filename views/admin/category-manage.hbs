<section class="main-content w-100" style="background-color: black;">
  <div class="container mt-4 px-5">
    <div class="d-flex justify-content-between">
      <h3 class="title-5 m-b-35">Categories</h3>
      <div class="table-data__tool">
        <div class="table-data__tool-right">
          <button class="btn" onclick="location.href='/admin/addcategory'">
            <i class="fa-solid fa-plus"></i>
            &nbsp ADD</button>
        </div>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Category</th>
          <th>Actions</th>
          <!-- <th>Actions</th> -->
        </tr>
      </thead>
      <tbody>
        {{#each allCategories}}
          <tr>
            <td>#{{categoryid}}</td>
            <td>{{name}}</td>
            <td>
              <button
                class="item"
                data-toggle="tooltip"
                data-placement="top"
                title=""
                data-original-title="Edit"
                onclick="location.href='/admin/editcate/{{_id}}'"
              >
                <i class="fas fa-pen"></i>
              </button>
              {{#if active}}
                <button
                  class="item"
                  data-toggle="tooltip"
                  data-placement="top"
                  title=""
                  data-original-title="Delete"
                  onclick="location.href='/admin/unlistcate/{{_id}}'"
                >
                  <i class="fa-sharp fa-solid fa-eye-slash"></i>
                </button>
              {{else}}
                <button
                  class="item"
                  data-toggle="tooltip"
                  data-placement="top"
                  title=""
                  data-original-title="Delete"
                  onclick="location.href='/admin/listcate/{{_id}}'"
                >
                  <i class="fa-sharp fa-solid fa-eye"></i>
                </button>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{#if duplicateCategoryError}}
      <div class="alert alert-danger mt-4" role="alert">
        Category already exists.
      </div>
    {{/if}}
  </div>
</section>

<script>
  setTimeout(function() {
    document.querySelector('.alert').style.display = 'none';
  }, 3000); // hide alert after 5 seconds (5000 milliseconds)
</script>
